{
  "name": "velo-backend",
  "version": "1.0.0",
  "description": "Complete Authentication Backend with TypeScript and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/database.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/database.ts",
    "test": "jest"
  },
  "dependencies": {
    "@polkadot/api": "^16.4.8",
    "@polkadot/util-crypto": "^13.5.6",
    "@prisma/client": "^6.16.1",
    "@solana/web3.js": "^1.98.4",
    "@stellar/stellar-sdk": "^14.2.0",
    "@types/axios": "^0.9.36",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bitcoinjs-lib": "^6.1.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ecpair": "^3.0.0",
    "elliptic": "^6.6.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^4.2.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "resend": "^6.0.3",
    "speakeasy": "^2.0.0",
    "starknet": "^7.6.4",
    "tiny-secp256k1": "^2.2.4",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/elliptic": "^6.4.18",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/nodemailer": "^6.4.19",
    "@types/pg": "^8.10.2",
    "@types/speakeasy": "^2.0.7",
    "@types/stellar-sdk": "^0.11.1",
    "prisma": "^6.16.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
