{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    // Allow sources outside the service folder (e.g. ../shared/src)
    // Set rootDir to the repository root so tsc accepts imports from sibling packages.
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "../shared/src/**/*"]
}
